<h3> Customer #<%= @customer.id %> </h3>

<div>
  Name: <%= @customer.name %>
  <br>
  Created at <%= @customer.created_at.strftime('%m/%d/%Y @ %I:%M%p') %>
</div>

<div class="button-container">
  <%= link_to "Edit", edit_customer_path %>
  <%= link_to "Delete", customer_path, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>